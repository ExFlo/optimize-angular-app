{
  "name": "optimize-angular-app",
  "version": "1.0.0-alpha.0",
  "description": "Optimize Angular application",
  "keywords": "Angular bundling treeshaking aot lazyloading prerender universal webpack rollup",
  "author": "Marc Laval",
  "scripts": {
    "clean": "rm -rf dist/ && rm -rf tmp/",
    "public": "mkdir dist && cp -a public/* dist/ && bash ./scripts/vendors.sh && npm run chart",
    "dev": "tsc -p tsconfig-systemjs.json",
    "bundling-app": "npm run dev && node ./scripts/app-system-bundler.js",
    "bundling-full": "npm run dev && node ./scripts/full-system-bundler.js",
    "treeshaking-rollup": "rollup -c rollup-jit.js",
    "treeshaking-webpack": "webpack --config webpack-jit.js --progress --profile --bail",
    "aot-rollup": "ngc -p tsconfig-aot.json && rollup -c rollup-aot.js",
    "aot-webpack": "webpack --config webpack-aot.js --progress --profile --bail",
    "lazyloading": "webpack --config webpack-lazyloading.js --progress --profile --bail",
    "prerender": "tsc -p tsconfig-prerender.json && node ./scripts/prerender.js && webpack --config webpack-prerender.js --progress --profile --bail",
    "build": "npm run clean && npm run public && npm run dev && npm run bundling-app && npm run bundling-full && npm run treeshaking-rollup && npm run treeshaking-webpack && npm run aot-rollup && npm run aot-webpack && npm run lazyloading && npm run prerender",
    "start": "http-server ./dist -s",
    "watch": "tsc -w -p tsconfig-systemjs.json",
    "e2e": "tsc -p tsconfig-protractor.json && concurrently -k -s first \"npm start\" \"protractor\"",
    "test": "webdriver-manager update && npm run e2e",
    "perf_loadtime": "tsc -p tsconfig-protractor.json && concurrently -k -s first \"npm start\" \"protractor --restartBrowserBetweenTests\"",
    "perf_lighthouse": "concurrently -k -s first \"npm start\" \"bash ./scripts/lighthouse.sh\"",
    "perf_report": "node ./scripts/report.js",
    "perf": "webdriver-manager update && npm run perf_loadtime && npm run perf_lighthouse && npm run perf_report",
    "chart": "node ./scripts/chart.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mlaval/optimize-angular-app.git"
  },
  "license": {
    "type": "MIT",
    "url": "https://raw.githubusercontent.com/mlaval/optimize-angular-app/master/LICENSE"
  },
  "bugs": {
    "url": "https://github.com/mlaval/optimize-angular-app/issues"
  },
  "homepage": "https://github.com/mlaval/optimize-angular-app#readme",
  "dependencies": {
    "@angular/core": "2.1.2",
    "@angular/compiler": "2.1.2",
    "@angular/common": "2.1.2",
    "@angular/forms": "2.1.2",
    "@angular/http": "2.1.2",
    "@angular/platform-browser": "2.1.2",
    "@angular/platform-browser-dynamic": "2.1.2",
    "@angular/platform-server": "2.1.2",
    "@angular/router": "3.1.2",
    "@ng-bootstrap/ng-bootstrap": "1.0.0-alpha.10",
    "angular2-universal": "2.1.0-rc.1",
    "classlist-polyfill": "1.0.3",
    "core-js": "2.4.1",
    "rxjs": "5.0.0-beta.12",
    "zone.js": "0.6.26"
  },
  "devDependencies": {
    "@angular/compiler-cli": "2.1.2",
    "@types/node": "^6.0.38",
    "http-server": "^0.9.0",
    "protractor": "4.0.10",
    "concurrently": "3.1.0",
    "lighthouse": "1.1.7",
    "filesize": "3.3.0",
    "rollup": "0.36.3",
    "rollup-plugin-commonjs": "5.0.5",
    "rollup-plugin-node-resolve": "2.0.0",
    "rollup-plugin-typescript": "0.8.1",
    "rollup-plugin-uglify": "1.0.1",
    "systemjs": "0.19.40",
    "systemjs-builder": "0.15.33",
    "typescript": "2.0.6",
    "webpack": "2.1.0-beta.25",
    "html-webpack-plugin": "2.24.1",
    "script-ext-html-webpack-plugin": "1.3.2",
    "awesome-typescript-loader": "2.2.4",
    "raw-loader": "0.5.1",
    "@ngtools/webpack": "1.1.4"
  }
}
