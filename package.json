{
  "name": "optimized-angular-app",
  "version": "1.0.0-alpha.0",
  "description": "Optimized Angular application",
  "keywords": "Angular",
  "author": "Marc Laval",
  "scripts": {
    "clean": "rm -rf dist/",
    "vendors": "bash ./scripts/vendors.sh",
    "public": "npm run clean && mkdir dist && cp -a public/* dist/ && npm run vendors",
    "dev": "npm run public && tsc -w -p tsconfig-systemjs.json",
    "systemjs": "npm run public && tsc -p tsconfig-systemjs.json",
    "bundling-app": "npm run systemjs && node ./scripts/app-system-bundler.js",
    "bundling-full": "npm run bundling-app && node ./scripts/full-system-bundler.js",
    "treeshaking-rollup": "npm run public && rollup -c rollup-jit.js &> /dev/null",
    "treeshaking-webpack": "npm run public && MODE=build webpack --config webpack-jit.js --progress --profile --bail",
    "ngc": "ngc -p tsconfig-ngc.json",
    "aot-rollup": "npm run public && npm run ngc && rollup -c rollup-aot.js &> /dev/null",
    "aot-webpack": "npm run public && MODE=build webpack --config webpack-aot.js --progress --profile --bail",
    "serve": "http-server ./dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mlaval/optimized-angular-app.git"
  },
  "license": {
    "type": "MIT",
    "url": "https://raw.githubusercontent.com/mlaval/optimized-angular-app/master/LICENSE"
  },
  "bugs": {
    "url": "https://github.com/mlaval/optimized-angular-app/issues"
  },
  "homepage": "https://github.com/mlaval/optimized-angular-app#readme",
  "dependencies": {
    "@angular/core": "2.1.0",
    "@angular/compiler": "2.1.0",
    "@angular/common": "2.1.0",
    "@angular/forms": "2.1.0",
    "@angular/http": "2.1.0",
    "@angular/platform-browser": "2.1.0",
    "@angular/platform-browser-dynamic": "2.1.0",
    "@angular/platform-server": "2.1.0",
    "@angular/router": "3.1.0",
    "@ng-bootstrap/ng-bootstrap": "1.0.0-alpha.7",
    "classlist-polyfill": "1.0.3",
    "core-js": "2.4.1",
    "rxjs": "5.0.0-beta.12",
    "zone.js": "0.6.25"
  },
  "devDependencies": {
    "@angular/compiler-cli": "2.1.0",
    "http-server": "^0.9.0",
    "rollup": "0.36.3",
    "rollup-plugin-commonjs": "5.0.5",
    "rollup-plugin-node-resolve": "2.0.0",
    "rollup-plugin-typescript": "0.8.1",
    "rollup-plugin-uglify": "1.0.1",
    "systemjs": "0.19.39",
    "systemjs-builder": "0.15.32",
    "typescript": "2.0.3",
    "webpack": "2.1.0-beta.25",
    "html-webpack-plugin": "2.22.0",
    "awesome-typescript-loader": "2.2.4",
    "raw-loader": "0.5.1",
    "@ngtools/webpack": "1.1.0"
  }
}